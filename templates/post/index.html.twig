{% extends 'base.html.twig' %}

{% block title %}NicoBlog{% endblock %}

{% block content %}

    <h1 class="my-4">NicoBlog List
        <small>Secondary Text</small>
    </h1>

    <!-- Blog Post -->
    {% for post in posts %}

    <div class="card mb-4">
        {% if post.postImage is not null %}
            {#                    <img src="/uploads/images/{{post.postImage}}"></td>#}
            <img src={{ asset(post.postImage,'file_upload')}}  alt="{{ post.title }}" class="card-img-top"></td>
        {% endif %}
        <div class="card-body">
            <h2 class="card-title">{{ post.title }}</h2>
            <p class="card-text">{{ post.summary }}</p>
            <a href="{{ path('post_show',{'id':post.id}) }}" class="btn btn-primary">nico</a>
        </div>
        <div class="card-footer text-muted">
            {{ post.createdAt ? post.createdAt|date('Y-m-d H:i:s') : '' }}
            <a href="#">read</a>
        </div>
    </div>

    {% else %}
        <tr>
            <td colspan="9">暂时没有任何文章。</td>
        </tr>
    {% endfor %}
    <!-- Pagination -->
    <ul class="pagination justify-content-center mb-4">
        <li class="page-item">
            <a class="page-link" href="#">&larr; Older</a>
        </li>
        <li class="page-item disabled">
            <a class="page-link" href="#">Newer &rarr;</a>
        </li>
    </ul>



{% endblock %}
